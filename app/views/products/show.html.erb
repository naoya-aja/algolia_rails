<h1><%= @product.title %></h1>
<p><%= @product.label %></p>
<p><%= @product.price %></p>

<p><%= @product.content %></p>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
